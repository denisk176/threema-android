<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/ballot_matrix_cell_width"
    android:layout_height="@dimen/ballot_matrix_cell_height">

    <LinearLayout
        android:id="@+id/cell"
        android:layout_width="@dimen/ballot_matrix_cell_width"
        android:layout_height="@dimen/ballot_matrix_cell_height"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/ballot_matrix_cell_border"
        android:layout_marginBottom="@dimen/ballot_matrix_cell_border"
        android:background="@drawable/matrix_winner_cell"
        android:gravity="center">

        <ImageView
            android:id="@+id/voting_value_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/voting_value_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@android:color/white"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/voting_value_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>
